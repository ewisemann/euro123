	<div class="col-lg-6">
		<h4>Category : <i>
			<% if @tool.toolcategory.level3? %>
			<%=  @tool.toolcategory.level1.to_s + " > " + @tool.toolcategory.level2.to_s +  " > " + @tool.toolcategory.level3.to_s %>
			<% elsif @tool.toolcategory.level2? %>
				<%=  @tool.toolcategory.level1.to_s + " > " + @tool.toolcategory.level2.to_s %>
				<% else %>
				<%=  @tool.toolcategory.level1.to_s %>
			<% end %></i>
		</h4><br>
		<h2><span class="label label-primary"><%= @tool.title %></span></h2><br>
		
